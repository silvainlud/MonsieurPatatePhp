        <div>
            <h2 class="mt-5">Formulaire</h2>
            <h3>Input</h3>
            <div class="hstack">
                <div>
                    <small class="text-muted">.form-group > input</small>
                    <div class="card">
                        <div class="form-group card-body">
                            <label for="form-input">Label</label>
                            <input type="text" id="form-input" placeholder="placeholder">
                        </div>
                    </div>
                </div>
                <div>
                    <small class="text-muted">.form-group > input:disabled</small>
                    <div class="card">
                        <div class="form-group card-body">
                            <label for="form-input">Label</label>
                            <input type="text" id="form-input" placeholder="placeholder" disabled>
                        </div>
                    </div>
                </div>
                <div>
                    <small class="text-muted">.form-group > input.input-light</small>
                    <div class="form-group">
                        <label for="form-input">Label</label>
                        <input type="text" id="form-input" class="input-light" placeholder="placeholder">
                    </div>
                </div>
            </div>
            <h3>Checkbox</h3>
            <div class="hstack">
                <div>
                    <small class="text-muted">.form-check</small>
                    <div class="card">
                        <div class="form-check card-body">
                            <input type="checkbox" name="_remember_me" id="remember_me" checked/>
                            <label for="remember_me">.form-check</label>
                        </div>
                    </div>
                </div>
            </div>
            <h3>Zone de formulaire</h3>
            <div>
