        <div>
            <h2 class="mt-5">Stack</h2>
            <h3>.hstack</h3>
            <div class="hstack">
                {% for i in 0..10 %}
                    <div style="width: 100px; height: 100px; background: var(--color-primary)"></div>
                {% endfor %}

                {% for i in 0..10 %}
                    <div style="width: {{ i*10+10 }}px; height: {{ i*10+10 }}px; background: var(--color-primary)"></div>
                {% endfor %}
            </div>
            <h4>.stack-vcenter</h4>
            <div class="hstack stack-vcenter">
                {% for i in 0..10 %}
                    <div style="width: {{ i*10+10 }}px; height: {{ i*10+10 }}px; background: var(--color-primary)"></div>
                {% endfor %}
            </div>
            {% for c in ["start","end", "center"] %}
                <h4>.stack-{{ c }}</h4>
                <div class="hstack stack-{{ c }}">
                    {% for i in 1..3 %}
                        <div style="width: 100px; height: 100px; background: var(--color-primary)"></div>
                    {% endfor %}
                </div>
            {% endfor %}
            <h3>.vstack</h3>
            <div class="vstack">
                {% for i in 0..2 %}
                    <div style="width: 100%; height: 100px; background: var(--color-primary)"></div>
                {% endfor %}
            </div>
            <h4>.stack-vcenter</h4>
            <div class="vstack stack-vcenter">
                {% for i in 0..2 %}
                    <div style="width: {{ i*10+10 }}px; height: {{ i*10+10 }}px; background: var(--color-primary)"></div>
                {% endfor %}
            </div>
        </div>
        <div>
            <h2 class="mt-5">Grilles</h2>
            {% for i in [2,3,4,5] %}
                <h3>.grid{{ i }}</h3>
                <div class="grid{{ i }}">
                    {% for i in 0..(i*2 -1 ) %}
                        <div style="width: 100%; height: 50px; background: var(--color-primary)"></div>
                    {% endfor %}
                </div>
            {% endfor %}
            <h3>.grid-rfull | .grid-cspan</h3>
            <div class="grid5">
                <div style="width: 100%; height: 50px; background: var(--color-primary)" class="grid-rfull">
                    .grid-rfull
                </div>
                <div style="width: 100%; height: 50px; background: var(--color-primary)" class="grid-cspan-3">
                    .grid-cspan-3
                </div>
                {% for i in 0..6 %}
