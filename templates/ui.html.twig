                {% endfor %}
            </div>
        </div>
        <div>
            <h2 class="mt-5">Images</h2>
            <div class="grid5">
                {% for i in images %}
                    <div class="vstack">
                        <img src="{{ i }}" alt="{{ i }}"
                             style="width: 100%; max-height: 90px;object-fit: contain">
                        <small class="text-muted text-center">{{ i }}</small>
                    </div>
                {% endfor %}
            </div>
        </div>
