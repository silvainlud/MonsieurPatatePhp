                    <p class="text-crossed">Texte d'alerte .text-crossed</p>
                </div>
                <hr class="hr-left">
            </div>
        </div>
        <div>
            <h2 class="mt-5">Couleurs</h2>
            <div class="hstack">
                {% for color in colors %}
                    <div class="m-2">
                        <small class="text-muted">{{ color }}</small>
                        <div style="width: 70px;height: 70px;background:var(--color-{{ color }});"></div>
                    </div>
                {% endfor %}
            </div>
            <h3>Fluent</h3>
            <div class="hstack">
                {% for color in colors %}
                    <div class="m-2">
                        <small class="text-muted">fluent-{{ color }}</small>
                        <div style="width: 70px;height: 70px;background:var(--color-fluent-{{ color }});"></div>
                    </div>
                {% endfor %}
            </div>
            <h3>Transparent</h3>
            <div class="hstack">
                {% for color in colors %}
                    <div class="m-2">
                        <small class="text-muted">trans-{{ color }}</small>
                        <div style="width: 70px;height: 70px;background:var(--color-trans-{{ color }});"></div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div>
            <h2 class="mt-5">Séparateur</h2>
            <div class="vstack" style="max-width: 100%">
                {% for s in ['right', 'left', 'center'] %}
                    <div class="m-2 text-{{ s }}">
                        <small class="text-muted">.hr-{{ s }}</small>
                        <hr class="hr-{{ s }} hr-50">
                    </div>
                {% endfor %}
                {% for s in [100,90,75,50,25] %}
                    <div class="m-2 text-center">
                        <small class="text-muted">.hr-{{ s }}</small>
                        <hr class="hr-{{ s }} ">
                    </div>
                {% endfor %}
            </div>
        </div>
        <div>
            <h2 class="mt-5">Boutons</h2>
            <div class="hstack">
