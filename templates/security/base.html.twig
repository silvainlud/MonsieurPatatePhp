<!DOCTYPE html>
<html lang="en">
<head>
    {{ vite_asset('security.js', []) }}
    {% include '_head.html.twig' %}
</head>


<body class="login">

<div class="login-content">
    <div class="login-body">
        <div class="header">
            <img alt="Logo" class="logo" src="{{ asset('favicon.png') }}">
            Silvain.eu
        </div>
        <div class="stack-spacer"></div>
        <div class="login-header">
            <div class="login-header-icon">
                <img alt="Logo" class="logo" src="{{ asset('images/books.png') }}">
            </div>
            <div class="login-header-content">
                <h1>Monsieur Patate Bot</h1>
                <h2>Se connecter</h2>
            </div>
        </div>
        <div class="login-zone {% block class_zone %}{% endblock %}">
            {% block body %}{% endblock %}

            <form method="post" class="form-zone mt-4">
                {% if error %}
                    <p class="color-red">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                {% endif %}
                <div class="form-row">
                    <label for="inputEmail">Nom d'utilisateur</label>
                    <input type="email" name="email" id="inputEmail" class="form-control" required autofocus>
                </div>
                <div class="form-row">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword"
                           class="form-control" required>
                </div>


                <div class="form-submit">
                    <div class="flex-grow-1"></div>
                    <button class="btn btn-small btn-dark-grey"
                            type="submit">
                        Se connecter
                        <i class="fas fa-sign-in-alt"></i>
                    </button>
                </div>
            </form>
            <hr>
            <a href="{{ path('login_discord') }}" class="btn btn-discord mt-4">
                <img src="{{ asset('images/Discord-Logo-White.svg') }}" alt="Discord Logo">
                Discord
            </a>
        </div>
        <div class="stack-spacer"></div>
        <footer>
            {% block footer %}{% endblock footer %}
            Site réalisé par : Ludwig SILVAIN | Copyright © Ludwig SILVAIN {{ "now"|date("Y") }}
        </footer>
    </div>
    <div class="login-background"></div>
</div>

{% block script %}{% endblock %}
</body>
</html>
